---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<!-- <meta name="robots" content="noindex" /> -->
		<meta name="description" content={ title } />
		<title>{ title }</title>
		<link rel="preconnect" href="https://fonts.googleapis.com" crossorigin="anonymous" />
 		<link rel="preconnect" href="https://unpkg.com" crossorigin="anonymous" />
		<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons&display=swap" />
		<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Montserrat:wght@200;400;500;700;900&display=swap" />
		<link rel="stylesheet" href="https://unpkg.com/aos@2.3.4/dist/aos.css" />
	</head>
	<body id="top">
		<div class="wrapper">
			<slot />
			<footer>
				Â©2023 ASTRO BASE
			</footer>
		</div>
	</body>
</html>
<script is:inline>
let header = document.querySelector("header");

window.addEventListener("scroll", () => {
	if (document.body.scrollTop > 150 || document.documentElement.scrollTop > 150) {
		header.classList.add("active");
	} else {
		header.classList.remove("active");
	}
})

let nav = document.querySelector('.header-lists');
let spNav = document.querySelector('.sp-nav');
spNav.appendChild(nav.cloneNode(true));

let body = document.querySelector('body');
let menuBtn = document.querySelector('.sp-nav-btn');
menuBtn.addEventListener('click', () => {
	body.classList.toggle('side-open');
})
</script>

<script src="https://unpkg.com/aos@2.3.4/dist/aos.js" defer></script>
<script is:inline>
  window.onload = function() {
	AOS.init();
  };
</script>